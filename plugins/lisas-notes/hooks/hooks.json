{
  "description": "Auto-commit on Stop and prepare new commit on UserPromptSubmit",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/prepare-commit.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/auto-commit.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
